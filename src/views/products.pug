extends ./layout/index

block contenido
    .container

        .container.mt-4
            
            form.p-4.border.rounded(action="/products/create", method="post")
                h3.text-center Crear Producto
                label.form-label(for="categorieName") Nombre del producto
                input.form-control(type="text", id="categorieName", name="name", placeholder="Nombre de la categoria. Ej: 'Televisor'")

                .d-flex.mt-4.justify-content-end.gap-2
                    button.btn.btn-outline-secondary Limpiar
                    button.btn.btn-primary Enviar

            //- Tabla de las categoria
            .mt-4.mb-4
                if data
                    h3.text-center Listado de productos
                    table.table
                        tr
                            th Nombre
                            th Acciones
                        each item in data
                            tr(data-categorie=item.id)
                                td=item.name
                                td.d-flex.justify-content-end.gap-2
                                    button.btn.btn-primary.d-none(id="save") Guardar 
                                    button.btn.btn-outline-primary(id="edit") Editar 
                                    button.btn.btn-warning(id="delete") Eliminar 
                else
                    .mt-4.alert.alert-warning No hay productos registrados

